{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PersonalizedMusicManager.sln",
                "-o",
                "${workspaceFolder}/bin/Debug",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/nologo",
                "/p:Configuration=Debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/PersonalizedMusicManager.sln",
                "-o",
                "${workspaceFolder}/bin/Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/nologo",
                "/p:Configuration=Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/PersonalizedMusicManager.sln"
            ],
            "problemMatcher": []
        }
    ]
}
